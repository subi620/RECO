<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CouponHistoryDetail">

    <include
        android:id="@+id/title_bar"
        layout="@layout/title_bar"
        android:layout_width="match_parent"
        android:layout_height="71dp"/>

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="104dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/btn_back" />

    <ImageView
        android:id="@+id/gifticonImage"
        android:layout_width="257dp"
        android:layout_height="344dp"
        android:layout_below="@+id/title_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_bar"
        app:srcCompat="?attr/listChoiceBackgroundIndicator"
        tools:srcCompat="@tools:sample/avatars" />


    <TextView
        android:id="@+id/gifticonBrand"
        android:layout_width="130dp"
        android:layout_height="39dp"
        android:layout_above="@+id/gifticonName"
        android:layout_below="@+id/gifticonImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="brand"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gifticonImage" />

    <TextView
        android:id="@+id/gifticonName"
        android:layout_width="153dp"
        android:layout_height="33dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Name"
        android:textSize="20sp"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gifticonBrand" />


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        app:srcCompat="@android:drawable/divider_horizontal_textfield" />

    <TextView
        android:id="@+id/gifticondetail"
        android:layout_width="130dp"
        android:layout_height="39dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="자세한 제품 설명"
        android:textColor="#999"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="63dp"
        android:layout_height="18dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="8dp"
        android:text="구매 일자"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gifticonName" />

    <TextView
        android:id="@+id/gifticonBuyDate"
        android:layout_width="90dp"
        android:layout_height="22dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="8dp"
        android:text="nnnn - nn - nn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/gifticonExpirydate"
        android:layout_width="90dp"
        android:layout_height="22dp"
        android:layout_marginTop="8dp"
        android:text="nnnn - nn - nn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toEndOf="@+id/gifticonBuyDate"
        app:layout_constraintTop_toBottomOf="@+id/textView28" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="63dp"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:text="유효기간"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toBottomOf="@+id/gifticonName" />

</androidx.constraintlayout.widget.ConstraintLayout>